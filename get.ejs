<body id="main">
    
    <form action="find" post="get">
        
    <table class="table table-border">
        <thead class="border table-warning">
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Stock</th>
        </thead>
       
            
               <% if(data){ %>
                <tbody class="table-secondary">
               <% data.forEach((e)=>{ %>
                 <tr>
                    <td><%= e.productId %></td>
                    <td><%= e.productName %></td>
                    <td><%= e.productPrice %></td>
                    <td><%= e.productStock %></td>
                 </tr>


               <% }) %>
            </tbody>
                <% } %>
            
      
    </table>
    <input style="margin-left: 399px;" class="btn btn-success " type="submit" name="" id="" value="Get all Data">
